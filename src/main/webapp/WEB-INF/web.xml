<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Y2B JSP</display-name>
  <servlet>
    <servlet-name>adding</servlet-name>
    <jsp-file>/add.jsp</jsp-file>
    <init-param>
      <param-name>constant</param-name>
      <param-value>3.14</param-value>
    </init-param>

  </servlet>
  <servlet-mapping>
    <servlet-name>adding</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <context-param>
    <param-name>website</param-name>
    <param-value>www.rca.gov.rw</param-value>
  </context-param>
</web-app>
